<div class="row">
	<div class="col-lg-12">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<a class="navbar-brand" href="#">Webchat</a>

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item {{#if isHome}}active{{/if}}">
						<a class="nav-link" href="/">Главная</a>
					</li>

					{{#if user}}
					<li class="nav-item {{#if isUser}}active{{/if}}">
						<a class="nav-link" href="/chat">Чат</a>
					</li>
					{{/if}}
				</ul>

				<ul class="navbar-nav">
					<li class="nav-item">
						{{#if user}}
							<a href="" onclick="axios.post('/logout').then(e => window.location.href = '/'); return false" class="nav-link">Выйти</a>
						{{else}}
							<a class="nav-link" href="/login">Вход</a>
						{{/if}}
					</li>
				</ul>
			</div>
		</nav>
	</div>
</div>